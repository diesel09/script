txtvar+=$(printf '%-10s' "LIMITE")
echo -e "\033[1;33m${txtvar}"
echo -e " "
cat /etc/ADMuser
msg -bar
}
# LIMITADOR AUTO
if [[ "$1" = "verificar" ]]; then
verif_fun
exit
fi
[[ -z ${VERY} ]] && verificar="\033[1;31m[DESACTIVADO]" || verificar="\033[1;32m[ACTIVO]"

