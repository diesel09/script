echo -ne "$(msg -verd "[4]") $(msg -verm2 "=>>") " && msg -bra "\033[1mBLOQUEAR O DESBLOQUEAR USUARIO"
echo -ne "$(msg -verd "[5]") $(msg -verm2 "=>>") " && msg -bra "\033[1mEDITAR USUARIO"
echo -ne "$(msg -verd "[6]") $(msg -verm2 "=>>") " && msg -bra "\033[1;32mRENOVAR USUARIO"
